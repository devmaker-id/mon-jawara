<div class="app-content-header">
  <div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between">
      <h3 class="mb-0"><%= title %></h3>
    </div>
  </div>
</div>

<div class="app-content py-3">
  <div class="container-fluid">
    
    <% if (flashData) { %>
      <div class="alert alert-<%= flashData.type %> alert-dismissible fade show" role="alert">
        <%= flashData.text %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <div class="col-12 mb-2">
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          Menu
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/admin/seller/add-new">Tambah Seller</a></li>
        </ul>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">

        <div class="table-responsive">
          <table class="table table-bordered table-striped align-middle text-nowrap">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Alamat</th>
                <th>Telepon</th>
                <th>Email</th>
                <th>Catatan</th>
                <th>Aksi</th>
              </tr>
            </thead>
            
            <tbody id="sellerTableBody">
              <% if (data.sellers && data.sellers.length > 0) { %>
                <% data.sellers.forEach((seller, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= seller.name %></td>
                    <td><%= seller.alamat %></td>
                    <td><%= seller.telepon %></td>
                    <td><%= seller.email %></td>
                    <td><%= seller.catatan %></td>
                    <td>
                      <!-- Tombol View -->
                      <button class="btn btn-sm btn-info"
                              data-bs-toggle="modal"
                              data-bs-target="#sellerModal"
                              data-action="view"
                              data-seller='<%- JSON.stringify(seller) %>'>
                        <span class="bi bi-eye"></span> Lihat
                      </button>
            
                      <!-- Tombol Edit -->
                      <button class="btn btn-sm btn-secondary"
                              data-bs-toggle="modal"
                              data-bs-target="#sellerModal"
                              data-action="edit"
                              data-seller='<%- JSON.stringify(seller) %>'>
                        <span class="bi bi-pen"></span> Edit
                      </button>
            
                      <!-- Tombol hapus -->
                      <button class="btn btn-sm btn-danger"
                              data-bs-toggle="modal"
                              data-bs-target="#actionModal"
                              data-seller-id="<%= seller.seller_id %>"
                              data-name="<%= seller.nama %>"
                              data-action="delete">
                        <span class="bi bi-trash"></span> Hapus
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center">Tidak ada data seller</td>
                </tr>
              <% } %>
            </tbody>

          </table>
        </div>

      </div>
    </div>
  </div>
</div>
