<section class="content mt-2">
  <div class="container-fluid">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">
          <i class="bi bi-robot me-2"></i>Manajemen API Telegram
        </h3>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAdd">
          <i class="bi bi-plus-circle me-1"></i>Tambah Bot
        </button>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Nama Bot</th>
                <th>Token</th>
                <th>Webhook</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% const dummyData = [
                { id: 1, name: 'Bot Notifikasi', token: '123:ABC...', webhook: 'https://example.com/bot1', active: true },
                { id: 2, name: 'Bot Admin', token: '456:DEF...', webhook: 'https://example.com/bot2', active: false },
                { id: 3, name: 'Bot Pelanggan', token: '789:GHI...', webhook: 'https://example.com/bot3', active: true },
                { id: 4, name: 'Bot Billing', token: '101:JKL...', webhook: 'https://example.com/bot4', active: false },
                { id: 5, name: 'Bot Backup', token: '112:MNO...', webhook: 'https://example.com/bot5', active: true },
              ]; %>
  
              <% dummyData.forEach((bot, i) => { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= bot.name %></td>
                  <td><%= bot.token %></td>
                  <td><%= bot.webhook %></td>
                  <td>
                    <span class="badge <%= bot.active ? 'bg-success' : 'bg-danger' %>">
                      <%= bot.active ? 'Aktif' : 'Nonaktif' %>
                    </span>
                  </td>
                  <td>
                    <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#modalEdit<%= bot.id %>">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#modalDelete<%= bot.id %>">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal Tambah -->
<div class="modal fade" id="modalAdd" tabindex="-1">
  <div class="modal-dialog">
    <form class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Tambah Bot</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label>Nama Bot</label>
          <input type="text" class="form-control" name="name">
        </div>
        <div class="mb-3">
          <label>Token</label>
          <input type="text" class="form-control" name="token">
        </div>
        <div class="mb-3">
          <label>Webhook URL</label>
          <input type="url" class="form-control" name="webhook">
        </div>
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="active" id="addActive">
          <label class="form-check-label" for="addActive">Aktifkan</label>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal Edit & Hapus -->
<% dummyData.forEach(bot => { %>
  <!-- Modal Edit -->
  <div class="modal fade" id="modalEdit<%= bot.id %>" tabindex="-1">
    <div class="modal-dialog">
      <form class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Bot</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label>Nama Bot</label>
            <input type="text" class="form-control" value="<%= bot.name %>">
          </div>
          <div class="mb-3">
            <label>Token</label>
            <input type="text" class="form-control" value="<%= bot.token %>">
          </div>
          <div class="mb-3">
            <label>Webhook URL</label>
            <input type="url" class="form-control" value="<%= bot.webhook %>">
          </div>
          <div class="form-check form-switch mb-3">
            <input class="form-check-input" type="checkbox" <%= bot.active ? 'checked' : '' %>>
            <label class="form-check-label">Aktifkan</label>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Delete -->
  <div class="modal fade" id="modalDelete<%= bot.id %>" tabindex="-1">
    <div class="modal-dialog">
      <form class="modal-content">
        <div class="modal-header bg-danger text-white">
          <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Hapus Bot</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Yakin ingin menghapus <strong><%= bot.name %></strong>?</p>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-danger">Hapus</button>
        </div>
      </form>
    </div>
  </div>
<% }) %>
