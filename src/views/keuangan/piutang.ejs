<!-- views/hutang-piutang.ejs -->
<section class="content mt-3">
  <div class="container-fluid">

    <% if (flashData) { %>
      <div class="alert alert-<%= flashData.type %>" role="alert">
        <%= flashData.text %>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>
        <i class="bi bi-cash-coin me-2"></i> Hutang & Piutang
      </h4>
      <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalTambahHutangPiutang">
        <i class="bi bi-plus-circle"></i> Tambah
      </button>
    </div>

    <!-- Ringkasan -->
    <div class="row mb-4">
      <div class="col-md-6 col-12 mb-2">
        <div class="card bg-danger text-white shadow">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Total Hutang</h5>
            <h4 class="mb-0">Rp <%= totalHutang.toLocaleString('id-ID') %></h4>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-12 mb-2">
        <div class="card bg-success text-white shadow">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Total Piutang</h5>
            <h4 class="mb-0">Rp <%= totalPiutang.toLocaleString('id-ID') %></h4>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabel -->
    <div class="card shadow">
      <div class="card-body table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead class="table-secondary">
            <tr>
              <th>#</th>
              <th>Nama</th>
              <th>Jenis</th>
              <th>Tanggal</th>
              <th>Jumlah</th>
              <th>Status</th>
              <th>Keterangan</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% records.forEach((r, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= r.name %></td>
                <td>
                  <% if (r.type === 'hutang') { %>
                    <span class="badge bg-danger">Hutang</span>
                  <% } else { %>
                    <span class="badge bg-success">Piutang</span>
                  <% } %>
                </td>
                <td><%= r.date %></td>
                <td>Rp <%= r.amount.toLocaleString('id-ID') %></td>
                <td>
                  <% if (r.status === 'lunas') { %>
                    <span class="badge bg-success">Lunas</span>
                  <% } else { %>
                    <span class="badge bg-warning text-dark">Belum Lunas</span>
                  <% } %>
                </td>
                <td><%= r.note %></td>
                <td>
                  <button class="btn btn-sm btn-warning btn-edit" data-id="<%= r.id %>">
                    <i class="bi bi-pencil-square"></i>
                  </button>
                  <button class="btn btn-sm btn-danger btn-delete" data-id="<%= r.id %>">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal Tambah -->
  <div class="modal fade" id="modalTambahHutangPiutang" tabindex="-1">
    <div class="modal-dialog">
      <form class="modal-content" action="/hutang-piutang/tambah" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Tambah Hutang/Piutang</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-2">
            <label class="form-label">Nama</label>
            <input type="text" class="form-control" name="name" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Jenis</label>
            <select name="type" class="form-select" required>
              <option value="hutang">Hutang</option>
              <option value="piutang">Piutang</option>
            </select>
          </div>
          <div class="mb-2">
            <label class="form-label">Tanggal</label>
            <input type="date" class="form-control" name="date" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Jumlah</label>
            <input type="number" class="form-control" name="amount" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Status</label>
            <select name="status" class="form-select" required>
              <option value="belum">Belum Lunas</option>
              <option value="lunas">Lunas</option>
            </select>
