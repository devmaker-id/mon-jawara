<!-- views/pengeluaran.ejs -->
<section class="content mt-3">
  <div class="container-fluid">

    <% if (flashData) { %>
      <div class="alert alert-<%= flashData.type %>" role="alert">
        <%= flashData.text %>
      </div>
    <% } %>

    <!-- Ringkasan & Tombol -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>
        <i class="bi bi-wallet2 me-2"></i> Manajemen Pengeluaran
      </h4>
      <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalTambahPengeluaran">
        <i class="bi bi-plus-circle"></i> Tambah Pengeluaran
      </button>
    </div>

    <!-- Total Pengeluaran Bulan Ini -->
    <div class="mb-3">
      <div class="card bg-danger text-white shadow">
        <div class="card-body d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Total Pengeluaran Bulan Ini</h5>
          <h3 class="mb-0">Rp <%= total.toLocaleString('id-ID') %></h3>
        </div>
      </div>
    </div>

    <!-- Tabel -->
    <div class="card shadow">
      <div class="card-body table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead class="table-danger">
            <tr>
              <th>#</th>
              <th>Tanggal</th>
              <th>Kategori</th>
              <th>Deskripsi</th>
              <th>Jumlah</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% expenses.forEach((item, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= item.date %></td>
                <td><%= item.category %></td>
                <td><%= item.description %></td>
                <td>Rp <%= item.amount.toLocaleString('id-ID') %></td>
                <td>
                  <button class="btn btn-sm btn-warning btn-edit" data-id="<%= item.id %>">
                    <i class="bi bi-pencil-square"></i>
                  </button>
                  <button class="btn btn-sm btn-danger btn-delete" data-id="<%= item.id %>">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal Tambah Pengeluaran -->
  <div class="modal fade" id="modalTambahPengeluaran" tabindex="-1">
    <div class="modal-dialog">
      <form class="modal-content" action="/pengeluaran/tambah" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Tambah Pengeluaran</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-2">
            <label for="tanggal" class="form-label">Tanggal</label>
            <input type="date" class="form-control" name="date" required>
          </div>
          <div class="mb-2">
            <label for="kategori" class="form-label">Kategori</label>
            <select name="category" class="form-select" required>
              <option value="Operasional">Operasional</option>
              <option value="Gaji Karyawan">Gaji Karyawan</option>
              <option value="Perawatan">Perawatan</option>
              <option value="Listrik">Listrik</option>
              <option value="Lainnya">Lainnya</option>
            </select>
          </div>
          <div class="mb-2">
            <label for="deskripsi" class="form-label">Deskripsi</label>
            <input type="text" class="form-control" name="description" required>
          </div>
          <div class="mb-2">
            <label for="jumlah" class="form-label">Jumlah (Rp)</label>
            <input type="number" class="form-control" name="amount" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Simpan</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        </div>
      </form>
    </div>
  </div>
</section>
