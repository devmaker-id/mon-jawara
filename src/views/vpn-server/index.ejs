<!-- views/vpn-server.ejs -->
<div class="app-content-header mb-3">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h3 class="mb-0 fw-semibold"><%= title %></h3>
        <small class="text-muted">
          Manajemen server VPN (akun, firewall, routing)
        </small>
      </div>
      <button
        class="btn btn-primary btn-sm"
        data-bs-toggle="modal"
        data-bs-target="#modalAddVPN">
        <i class="bi bi-plus-circle me-1"></i> Tambah Server
      </button>
    </div>
  </div>
</div>


<section class="content">
  <div class="container-fluid">

    <% if (flashData) { %>
      <div class="alert alert-<%= flashData.type %> alert-dismissible fade show">
        <%= flashData.text %>
        <button class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
          <i class="bi bi-shield-lock-fill me-1"></i> Daftar Server VPN
        </h5>
      </div>

      <div class="card-body">
        <div class="row g-3">
        <% vpnServers.forEach(server => { %>
          <div class="col-md-6 col-xl-4">
            <div class="card h-100 border-0 shadow-sm">
              <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h6 class="mb-0 fw-semibold">
                    <i class="bi bi-hdd-network me-1"></i> <%= server.name %>
                  </h6>

                  <% if (server.status === 'online') { %>
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle-fill me-1"></i> Online
                    </span>
                  <% } else { %>
                    <span class="badge bg-danger">
                      <i class="bi bi-x-circle-fill me-1"></i> Offline
                    </span>
                  <% } %>
                </div>

                <ul class="list-unstyled small mb-0">
                  <li>
                    <i class="bi bi-geo-alt me-1"></i>
                    Lokasi: <strong><%= server.lokasi || '-' %></strong>
                  </li>
                  <li>
                    <i class="bi bi-globe me-1"></i>
                    IP: <code><%= server.host %></code>
                  </li>
                  <li>
                    <i class="bi bi-diagram-3 me-1"></i>
                    API Port: <%= server.port_api || '-' %>
                  </li>
                </ul>

                <% if (server.updated_at) { %>
                  <small class="text-muted d-block mt-2">
                    Update: <%= server.updated_at %>
                  </small>
                <% } %>

              </div>

              <div class="card-footer bg-light d-flex justify-content-end gap-1">
                <a href="/admin/vpn-server/routing" class="btn btn-sm btn-outline-info">
                  <i class="bi bi-router"></i>
                </a>
                <a href="/admin/vpn-server/firewall" class="btn btn-sm btn-outline-secondary">
                  <i class="bi bi-shield-lock"></i>
                </a>
                <button class="btn btn-sm btn-outline-warning btn-edit" data-id="<%= server.id %>">
                  <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger btn-delete" data-id="<%= server.id %>">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        <% }) %>

        </div>
      </div>
    </div>
  </div>
</section>

<div class="modal fade" id="modalAddVPN" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <form action="/vpn-server/add" method="POST" class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">
          <i class="bi bi-plus-circle me-1"></i> Tambah Server VPN
        </h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="row g-3">

          <div class="col-12">
            <label class="form-label">Nama Server</label>
            <input type="text" name="name" class="form-control" placeholder="masukan nama server" required>
          </div>

          <div class="col-6">
            <label class="form-label">IP Address</label>
            <input type="text" name="ip" class="form-control" placeholder="Host/ip (local, public, vpn)" required>
          </div>

          <div class="col-md-6">
            <label class="form-label">API Port</label>
            <input type="number" name="mt_port" class="form-control" value="8728">
          </div>

          <div class="col-md-6">
            <label class="form-label">Mikrotik User</label>
            <input type="text" name="mt_user" class="form-control" required>
          </div>

          <div class="col-md-6">
            <label class="form-label">Mikrotik Password</label>
            <input type="password" name="mt_pass" class="form-control" required>
          </div>

          <div class="col-12">
            <label class="form-label">Lokasi</label>
            <input type="text" name="location" class="form-control">
          </div>

        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <button class="btn btn-primary">
          <i class="bi bi-save me-1"></i> Simpan
        </button>
      </div>

    </form>
  </div>
</div>

