<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
  <div class="sidebar-brand">
    <!--begin::Brand Link-->
    <a href="/" class="brand-link">
      <!--begin::Brand Image-->
      <img
        src="/assets/img/AdminLTELogo.png"
        alt="Mon-JAWARA Logo"
        class="brand-image opacity-75 shadow"
      />
      <!--end::Brand Image-->
      <!--begin::Brand Text-->
      <span class="brand-text fw-light">Mon-JAWARA</span>
      <!--end::Brand Text-->
    </a>
    <!--end::Brand Link-->
  </div>
  <!--end::Sidebar Brand-->
  <!--begin::Sidebar Wrapper-->
  <div class="sidebar-wrapper">
    <nav class="mt-2 mb-5">
      <!--begin::Sidebar Menu-->
      <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">

        <!-- Kondisional menu -->
        <% if (user.akun_type === "admin") { %>
          <%- include('./partials/menus/adminMenu') %>
        <% } else if (user.akun_type === "kasir") { %>
          <%- include('./partials/menus/kasirMenu') %>
        <% } else if (user.akun_type === "vip") { %>
          <%- include('./partials/menus/vipMenu') %>
        <% } else if (user.akun_type === "gold") { %>
          <%- include('./partials/menus/goldMenu') %>
        <% } else { %>
          <%- include('./partials/menus/defaultMenus') %>
        <% } %>
        
      </ul>
    </nav>
  </div>
  <!--end::Sidebar Wrapper-->
</aside>
