<div class="app-content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h3 class="mb-0">Tambah Pelanggan PLN</h3>
      </div>
      <div class="col-sm-6 text-end">
        <a href="/admin/mgmn-pln" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Kembali
        </a>
      </div>
    </div>
  </div>
</div>

<div class="app-content">
  <div class="container-fluid">
    <% if (flashData) { %>
    <div class="mt-2 alert alert-<%= flashData.type %>" role="alert">
      <%= flashData.text %>
    </div>
    <% } %>

    <div class="card">
      <div class="card-header bg-primary text-white">Form Tambah Pelanggan PLN</div>
      <div class="card-body">
        <form action="/admin/mgmn-pln/store" method="POST" class="needs-validation" novalidate>
          
          <div class="mb-3">
            <label>Nama Pelanggan</label>
            <input type="text" name="nama" class="form-control" placeholder="Masukkan nama pelanggan" required>
            <div class="invalid-feedback">Nama wajib diisi.</div>
          </div>

          <div class="mb-3">
            <label>Jenis PLN</label>
            <select name="jenis_pln" class="form-control" required>
              <option value="">-- Pilih Jenis PLN --</option>
              <option value="prabayar">Prabayar (Token)</option>
              <option value="pascabayar">Pascabayar</option>
            </select>
            <div class="invalid-feedback">Pilih jenis PLN terlebih dahulu.</div>
          </div>

          <div class="mb-3">
            <label>Alamat</label>
            <input type="text" name="alamat" class="form-control" placeholder="Masukkan alamat pelanggan" required>
            <div class="invalid-feedback">Alamat wajib diisi.</div>
          </div>

          <div class="mb-3">
            <label>Nomor PLN</label>
            <input type="text" name="no_pln" class="form-control" placeholder="Contoh: 562100899074">
          </div>

          <div class="mb-3">
            <label>Status</label>
            <select name="status" class="form-control">
              <option value="aktif" selected>Aktif</option>
              <option value="non-aktif">Nonaktif</option>
            </select>
          </div>

          <div class="mb-3">
            <label>Keterangan (Opsional)</label>
            <textarea name="keterangan" class="form-control" rows="3" placeholder="Catatan tambahan"></textarea>
          </div>

          <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-save"></i> Simpan Data
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    "use strict";
    let forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach(form => {
      form.addEventListener("submit", event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add("was-validated");
      });
    });
  })();
</script>
