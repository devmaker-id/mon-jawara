<section class="content mt-2">
  <div class="container-fluid">
    <!-- Header dan Tombol Tambah -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4><i class="bi bi-plug me-2"></i> User PPPoE</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddPPPoE">
        <i class="bi bi-person-plus-fill me-1"></i> Tambah User
      </button>
    </div>

    <!-- Tabel User PPPoE -->
    <div class="card shadow">
      <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Username</th>
              <th>Profile</th>
              <th>Status</th>
              <th>Uptime</th>
              <th class="text-nowrap">Last Login</th>
              <th>Catatan</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% const dummyPPPoEUsers = [
              { id: 1, username: 'pppoe-user1', profile: 'Unlimited', status: 'Aktif', uptime: '4h 10m', lastLogin: '2025-07-16 10:00', note: 'Kantor A' },
              { id: 2, username: 'pppoe-guest1', profile: '10Mbps', status: 'Nonaktif', uptime: '-', lastLogin: '-', note: 'Tidak diperpanjang' },
            ]; %>
            <% dummyPPPoEUsers.forEach(user => { %>
              <tr>
                <td class="text-nowrap"><%= user.username %></td>
                <td class="text-nowrap"><%= user.profile %></td>
                <td>
                  <% if (user.status === 'Aktif') { %>
                    <span class="badge bg-success"><%= user.status %></span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= user.status %></span>
                  <% } %>
                </td>
                <td class="text-nowrap"><%= user.uptime %></td>
                <td class="text-nowrap"><%= user.lastLogin %></td>
                <td><%= user.note %></td>
                <td class="text-nowrap">
                  <button class="btn btn-sm btn-warning btn-edit" data-id="<%= user.id %>">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button class="btn btn-sm btn-danger btn-delete" data-id="<%= user.id %>">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<div class="modal fade" id="modalAddPPPoE" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <form class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title"><i class="bi bi-person-plus-fill"></i> Tambah User PPPoE</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label>Username</label>
            <input type="text" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label>Password</label>
            <input type="password" class="form-control" required>
          </div>
          <div class="col-md-6">
            <label>Profile</label>
            <select class="form-select">
              <option>Pilih...</option>
              <option>Unlimited</option>
              <option>10Mbps</option>
              <option>5Mbps</option>
            </select>
          </div>
          <div class="col-md-6">
            <label>Status</label>
            <select class="form-select">
              <option>Aktif</option>
              <option>Nonaktif</option>
            </select>
          </div>
          <div class="col-md-12">
            <label>Catatan</label>
            <textarea class="form-control" rows="2"></textarea>
          </div>
        </div>
      </div>

      <div class="modal-footer bg-light">
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save"></i> Simpan
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Batal
        </button>
      </div>
    </form>
  </div>
</div>
