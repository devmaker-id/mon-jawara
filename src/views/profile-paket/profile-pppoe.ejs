<section class="content mt-2">
  <div class="container-fluid">
    <!-- Header dan Tombol Aksi -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4><i class="bi bi-plug me-2"></i> Profile PPPoE</h4>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddPPPoE">
        <i class="bi bi-plus-circle me-1"></i> Tambah Profile
      </button>
    </div>

    <!-- Tabel Profile PPPoE -->
    <div class="card shadow">
      <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th class="text-nowrap">Nama Profile</th>
              <th class="text-nowrap">Rate Limit</th>
              <th>DNS</th>
              <th class="text-nowrap">Local Address</th>
              <th class="text-nowrap">Remote Address</th>
              <th>Catatan</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% const dummyPPPoE = [
              { id: 1, name: "Paket Harian", rate: "1M/512K", dns: "8.8.8.8", local: "10.10.10.1", remote: "10.10.10.2-10.10.10.254", note: "Untuk pemakaian harian" },
              { id: 2, name: "Paket Bulanan", rate: "5M/2M", dns: "1.1.1.1", local: "10.20.20.1", remote: "10.20.20.2-10.20.20.254", note: "Paket tetap bulanan" }
            ]; %>
            <% dummyPPPoE.forEach(profile => { %>
              <tr>
                <td class="text-nowrap"><%= profile.name %></td>
                <td><%= profile.rate %></td>
                <td><%= profile.dns %></td>
                <td class="text-nowrap"><%= profile.local %></td>
                <td class="text-nowrap"><%= profile.remote %></td>
                <td><%= profile.note %></td>
                <td class="text-nowrap">
                  <button class="btn btn-sm btn-warning btn-edit" data-id="<%= profile.id %>">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button class="btn btn-sm btn-danger btn-delete" data-id="<%= profile.id %>">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<div class="modal fade" id="modalAddPPPoE" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <form class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Tambah Profile PPPoE</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label>Nama Profile</label>
            <input type="text" class="form-control" required />
          </div>
          <div class="col-md-6">
            <label>Rate Limit (Upload/Download)</label>
            <input type="text" class="form-control" placeholder="Contoh: 2M/1M" />
          </div>
          <div class="col-md-6">
            <label>DNS</label>
            <input type="text" class="form-control" placeholder="Contoh: 8.8.8.8" />
          </div>
          <div class="col-md-6">
            <label>Local Address</label>
            <input type="text" class="form-control" placeholder="Contoh: 10.1.1.1" />
          </div>
          <div class="col-md-6">
            <label>Remote Address</label>
            <input type="text" class="form-control" placeholder="Contoh: 10.1.1.2-10.1.1.254" />
          </div>
          <div class="col-12">
            <label>Catatan</label>
            <textarea class="form-control" rows="2"></textarea>
          </div>
        </div>
      </div>

      <div class="modal-footer bg-light">
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save"></i> Simpan
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Batal
        </button>
      </div>
    </form>
  </div>
</div>
