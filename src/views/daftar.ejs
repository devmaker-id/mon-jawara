<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/tower.png">
  <title>Pendaftaran Akun | MonJAWARA</title>

  <!-- CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/adminlte.css">

</head>
<body class="login-page bg-body-secondary">
  <div class="login-box">
    <div class="login-logo">
      <a href="#"><b>Mon</b>JAWARA</a>
    </div>

    <div class="card">
      <div class="card-body login-card-body">
        <h5 class="text-center mb-3">Formulir Pendaftaran</h5>

        <!-- Menampilkan Pesan Error/Info jika ada -->
        <% if (message) { %>
          <div class="mt-1 alert alert-<%= message.type %>" role="alert">
            <%= message.text %>
          </div>
        <% } %>

        <!-- Form Pendaftaran -->
        <form action="/auth/daftar" method="post" onsubmit="return validatePassword()">
          
          <!-- Input Email -->
          <div class="mb-2">
            <input type="email" class="form-control" name="email" placeholder="Email" required>
          </div>

          <!-- Input Password -->
          <div class="mb-2">
            <input type="password" class="form-control" name="password" id="password" placeholder="Kata Sandi" required>
          </div>

          <!-- Input Konfirmasi Password -->
          <div class="mb-2">
            <input type="password" class="form-control" name="confpass" id="confpass" placeholder="Ulangi Kata Sandi" required>
          </div>
          
          <!-- Tombol Daftar -->
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-sm btn-primary">
              <span class="bi bi-save"></span> Daftar
            </button>
          </div>
        </form>

        <!-- Link ke Halaman Login -->
        <p class="mt-3 mb-0 text-center">
          <a href="/auth/login">Sudah punya akun? Masuk di sini</a>
        </p>
      </div>
    </div>
  </div>

  <!-- Script Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/adminlte.js"></script>
</body>
</html>
